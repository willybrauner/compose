{
  "name": "compose",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/willybrauner/compose.git"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "FORCE_COLOR=1 turbo run build --filter=@wbe/*",
    "build:watch": "FORCE_COLOR=1 turbo run build --filter=@wbe/* -- --watch",
    "dev": "FORCE_COLOR=1 turbo run dev",
    "ncu": "ncu -u && FORCE_COLOR=1 turbo run ncu",
    "test:watch": "vitest --reporter verbose",
    "test": "vitest run",
    "size": "size-limit",
    "ci:version": "pnpm changeset version && pnpm --filter \"@wbe/*\" install --lockfile-only",
    "ci:publish": "pnpm build && pnpm changeset publish",
    "pre-publish": "npm run build && npm run test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@size-limit/preset-small-lib": "^11.0.0",
    "happy-dom": "^12.10.3",
    "prettier": "^3.1.0",
    "size-limit": "^11.0.0",
    "turbo": "^1.10.16",
    "typescript": "^5.3.2",
    "vite": "^5.0.4",
    "vitest": "^0.34.6",
    "@types/node": "^20.10.3"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false
  },
  "size-limit": [
    {
      "name": "@wbe/compose",
      "path": "packages/compose/dist/compose.js",
      "limit": "2 KB"
    }
  ]
}
