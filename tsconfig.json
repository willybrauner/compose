{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": ["./src", "./test"],
    "baseUrl": "./",
    "module": "esnext",
    "target": "esnext",
    "lib": ["es2015.promise", "es6", "dom", "esnext"],
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "isolatedModules": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "strictNullChecks": false
  },
  "exclude": ["node_modules", "dist"]
}
